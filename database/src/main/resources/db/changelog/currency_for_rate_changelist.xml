<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create_currency_for_exchange_rate_table" author="michal_keder">
        <createTable tableName="currency_for_exchange_rate">
            <column name="currency_id" type="bigint">
                <constraints foreignKeyName="fk_currency_id" references="currency(currency_id)" nullable="false"/>
            </column>
            <column name="exchange_rate_id" type="bigint">
                <constraints foreignKeyName="fk_exchange_rate_id" references="exchange_rate(exchange_rate_id)" nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="add_buy_attribute_to_currency_for_exchange_rate_table" author="michal_keder">
        <addColumn tableName="currency_for_exchange_rate">
            <column name="sell" type="int"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>